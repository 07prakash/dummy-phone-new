<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true">

    <!-- Card Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialog_background"
        android:padding="24dp"
        android:elevation="8dp"
        android:clipToPadding="false"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/white"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Header with Icon and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to Focus Lock"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primaryDark" />
        </LinearLayout>

        <!-- Welcome Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thank you for choosing Focus Lock. To continue, please read and accept our terms and conditions."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Description Box -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/info_box_background"
            android:padding="16dp"
            android:text="Your distraction-free launcher that helps you stay focused. With Focus Lock, you can lock yourself into only the apps you allow for a chosen period of time. No exit, no uninstall – just focus."
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginBottom="24dp" />

        <!-- Links -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/privacyPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • "
                android:textSize="15sp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/termsOfService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms of Service"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Agreement Checkbox -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/agreeCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I agree to the Privacy Policy and Terms of Service"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginBottom="24dp"
            app:buttonTint="@color/colorPrimary" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/exitButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Exit"
                android:textColor="@color/colorPrimary"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:minWidth="96dp" />

            <Button
                android:id="@+id/okButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Continue"
                android:textColor="@android:color/white"
                android:background="@drawable/button_primary"
                android:layout_marginStart="16dp"
                android:enabled="false"
                android:minWidth="96dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>