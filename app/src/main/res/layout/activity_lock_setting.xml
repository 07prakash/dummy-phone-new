<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Existing views remain the same -->
    <Button
        android:id="@+id/chooseAppsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Apps to Use"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/lockDurationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lock Duration:"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/timerDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/timePickerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Duration"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/lockBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOCK NOW"
        android:backgroundTint="#FF0000"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

    <!-- New CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/exitCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="After the time ends, what to exit?"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/exitBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exit"
                android:layout_gravity="end"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Unlock button (existing) -->
    <Button
        android:id="@+id/unlockBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UNLOCK"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"
        android:visibility="gone"/>

</LinearLayout>