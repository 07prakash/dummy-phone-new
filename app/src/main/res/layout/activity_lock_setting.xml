<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- These views show when NOT locked -->
    <Button
        android:id="@+id/chooseAppsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Apps to Use"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/lockDurationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lock Duration:"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/timerDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/timePickerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Duration"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/lockBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOCK NOW"
        android:backgroundTint="#FF0000"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

    <!-- This view shows ONLY when locked -->
    <Button
        android:id="@+id/unlockBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UNLOCK"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"
        android:visibility="gone"/>

</LinearLayout>