<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="@dimen/padding_screen">

    <!-- INNER ConstraintLayout (96% height, 98% width) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.98"
        app:layout_constraintHeight_percent="0.96"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title Text -->
        <TextView
            android:id="@+id/choostext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Choose App to Use"
            android:textSize="@dimen/text_xlarge"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:paddingVertical="@dimen/padding_screen"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Fragment Container -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView"
            android:name="com.dummy.dummyphoneprakash.fragments.LockFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            app:layout_constraintTop_toBottomOf="@id/choostext"
            app:layout_constraintBottom_toTopOf="@id/timePickerBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.97"
            app:layout_constraintHeight_percent="0.65"/>

        <!-- Time Picker Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/timePickerBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginHorizontal="@dimen/margin_xxxlarge"
            android:text="Set Lock Duration"
            android:textColor="@color/black"
            android:textSize="@dimen/button_text_size"
            android:paddingVertical="@dimen/padding_screen"
            app:cornerRadius="@dimen/corner_radius"
            app:elevation="@dimen/elevation_low"
            app:backgroundTint="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/fragmentContainerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

<!--        &lt;!&ndash; Scroll Blocking Settings Button &ndash;&gt;-->
<!--        <com.google.android.material.button.MaterialButton-->
<!--            android:id="@+id/scrollBlockingBtn"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="@dimen/btn_height"-->
<!--            android:layout_marginTop="@dimen/margin_medium"-->
<!--            android:layout_marginHorizontal="@dimen/margin_xxxlarge"-->
<!--            android:text="Scroll Blocking Settings"-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="@dimen/button_text_size"-->
<!--            android:paddingVertical="@dimen/padding_screen"-->
<!--            app:cornerRadius="@dimen/corner_radius"-->
<!--            app:elevation="@dimen/elevation_low"-->
<!--            app:backgroundTint="@android:color/white"-->
<!--            app:layout_constraintTop_toBottomOf="@id/timePickerBtn"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"/>-->

        <!-- Timer Display -->
        <TextView
            android:id="@+id/timerDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:textColor="@color/white"
            android:textSize="@dimen/text_xlarge"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/timePickerBtn"
            app:layout_constraintStart_toStartOf="@id/timePickerBtn"
            app:layout_constraintTop_toBottomOf="@id/timePickerBtn"/>

        <!-- Button Row Container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/margin_xsmall"
            android:gravity="center"

            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.9">

            <!-- Exit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/exitBtn"
                android:layout_width="@dimen/btn_width"
                android:layout_height="match_parent"

                android:padding="@dimen/padding_screen"
                android:text="Exit"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"
                app:backgroundTint="@color/red_500"
                app:cornerRadius="@dimen/corner_radius_large"
                app:elevation="@dimen/elevation_low"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Lock Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/lockBtn"
                android:layout_width="@dimen/btn_width"
                android:layout_height="match_parent"

                android:padding="@dimen/padding_screen"
                android:text="Lock Now"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"
                android:textStyle="bold"
                app:backgroundTint="@color/green_500"
                app:cornerRadius="@dimen/corner_radius_large"
                app:elevation="@dimen/elevation_low"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Unlock Button (initially hidden) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/unlockBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:backgroundTint="#4CAF50"
            android:text="UNLOCK"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:padding="@dimen/padding_screen"
            app:cornerRadius="@dimen/corner_radius_large"
            app:elevation="@dimen/elevation_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.6"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>